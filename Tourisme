    <button id="loadMorePosts">Charger plus d'articles</button>
</section>

<script>
    // Charger plus d'articles
    document.getElementById("loadMorePosts").addEventListener("click", () => {
        const newPost = document.createElement("article");
        newPost.innerHTML = "<h3>Nouveaux secrets de voyage</h3><p>Explorez des endroits peu connus au Maroc.</p>";
        document.getElementById("blogPosts").appendChild(newPost);
    });
</script>
<section id="communaute" class="section">
    <h2>Communauté</h2>
    <p>Rejoignez notre communauté pour partager vos expériences et découvrir celles des autres.</p>
    <form id="testimonialForm">
        <textarea placeholder="Partagez votre témoignage" required></textarea>
        <button type="submit">Envoyer</button>
    </form>
    <div id="testimonials"></div>
</section>

<script>
    // Ajouter un témoignage
    document.getElementById("testimonialForm").addEventListener("submit", function(e) {
        e.preventDefault();
        const text = this.querySelector("textarea").value;
        const testimonial = document.createElement("p");
        testimonial.textContent = text;
        document.getElementById("testimonials").appendChild(testimonial);
        this.reset();
    });
</script>
