<script>
    // Animation de bienvenue au chargement du site
    window.onload = function() {
        const greeting = document.getElementById('greeting');
        greeting.innerText = "Bienvenue sur le Portail Touristique du Maroc!";
        greeting.style.transition = "opacity 1s ease-in-out";
        greeting.style.opacity = 1;
    }
</script>
<script>
    // Animation au survol des éléments du menu
    const navLinks = document.querySelectorAll("nav ul li a");
    navLinks.forEach(link => {
        link.addEventListener("mouseover", () => {
            link.style.color = "#ff6347";
            link.style.backgroundColor = "#fff";
        });
        link.addEventListener("mouseout", () => {
            link.style.color = "#fff";
            link.style.backgroundColor = "";
        });
    });
</script>
<script>
    // Événement pour afficher plus d'informations sur une activité
    const activities = document.querySelectorAll(".activite");
    activities.forEach(activity => {
        activity.addEventListener("click", function() {
            alert("Plus d'infos sur cette activité bientôt !");
        });
    });
</script>
<script>
    // Ajouter un témoignage avec animation
    document.getElementById("testimonialForm").addEventListener("submit", function(e) {
        e.preventDefault();
        const text = this.querySelector("textarea").value;
        const testimonialDiv = document.createElement("div");
        testimonialDiv.textContent = text;
        testimonialDiv.style.transition = "opacity 1s";
        document.getElementById("testimonials").appendChild(testimonialDiv);
        testimonialDiv.style.opacity = 1;
        this.reset();
    });
</script>
<script>
    // Ajouter un nouvel article de blog de manière dynamique
    document.getElementById("loadMorePosts").addEventListener("click", () => {
        const newPost = document.createElement("article");
        newPost.innerHTML = "<h3>Explorer le Sahara</h3><p>Un guide complet pour visiter le désert marocain.</p>";
        document.getElementById("blogPosts").appendChild(newPost);
    });
</script>
<script>
    // Ajouter une transition fluide entre les sections du site
    const sections = document.querySelectorAll(".section");
    sections.forEach(section => {
        section.style.transition = "transform 0.5s ease-out";
        section.addEventListener("mouseenter", () => {
            section.style.transform = "scale(1.05)";
        });
        section.addEventListener("mouseleave", () => {
            section.style.transform = "scale(1)";
        });
    });
</script>
<script>
    // Animation de zoom sur les images de destination au survol
    const destinationImages = document.querySelectorAll(".destination-item img");
    destinationImages.forEach(image => {
        image.addEventListener("mouseenter", () => {
            image.style.transform = "scale(1.1)";
        });
        image.addEventListener("mouseleave", () => {
            image.style.transform = "scale(1)";
        });
    });
</script>
